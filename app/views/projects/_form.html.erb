<%= form_for(@project) do |f| %>
    <% if @project.errors.any? %>
        <div class="row">
          <div class="col-md-12">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <p>In 15 words or less, tell us about your project.</p>
      </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= f.text_field :title %>
      </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <p>Now, select the best, or closest, category that fits your idea.</p>
      </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name) %>
      </div>
      <div class="col-md-3"></div>
    </div>
    <div class="row">
      <div class="col-md-12 margin-bottom-20 margin-top-20">
        <!-- Content -->
        <div class="info-banner-fw boxed light">
          That was easy right? Now, Let's Really Get Down to Business!
          <br>
          <%= f.submit 'Save & Continue', class: 'button border medium margin-top-20' %>
        </div>

      </div>
    </div>
<% end %>