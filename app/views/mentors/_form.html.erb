<div class="container margin-bottom-20">
  <%= form_for(@mentor) do |f| %>
    <% if @mentor.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@mentor.errors.count, "error") %> prohibited this mentor from being saved:</h2>

        <ul>
        <% @mentor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :user_id %>
    <div class="row">
      <div class="columns col-md-3"></div>
      <div class="columns col-md-6">
        <%= f.select :category_id, options_from_collection_for_select(Category.where(category_type_id: 2), :id, :name), prompt: 'Choose A Field' %>
      </div>
      <div class="columns col-md-3"></div>
    </div>
    <div class="row">
      <div class="columns col-md-3"></div>
      <div class="columns col-md-6">
        <%= f.select :specialty_id, options_from_collection_for_select(Category.where(category_type_id: 1), :id, :name), prompt: 'Choose A Specialty' %>
      </div>
      <div class="columns col-md-3"></div>
    </div>
    <div class="row">
      <div class="row">
        <div class="columns col-md-12">
          <%= f.submit %>
        </div>
      </div>
    </div>
  <% end %>
</div>