<div class="container margin-top-80">
  <!-- Container -->
  <div class="container">

    <div class="row">
      <div class="col-md-4 col-md-offset-4">

        <!-- Container -->


        <div class="my-account style-1">

          <ul class="tabs-nav">
            <li class=""><a href="#tab1">Login</a></li>
            <li><a href="#tab2">Sign Up</a></li>
          </ul>

          <div class="tabs-container alt">

            <!-- Login -->
            <div class="tab-content" id="tab1" style="display: none;">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login'}) do |f| %>
                  <p class="form-row form-row-wide">
                    <label for="email">Email:
                      <i class="ln ln-icon-Mail"></i>
                      <%= f.email_field :email, autofocus: true, class: 'input-text' %>
                    </label>
                  </p>

                  <p class="form-row form-row-wide">
                    <label for="password">Password:
                      <i class="ln ln-icon-Lock-2"></i>
                      <%= f.password_field :password, autocomplete: 'off', class: 'input-text' %>
                    </label>
                  </p>

                  <p class="form-row">
                    <%= f.submit 'Log in', class: 'button border fw margin-top-10' %>
                    <label for="rememberme" class="rememberme">
                      <%= f.check_box :remember_me %> Remember Me</label>
                  </p>
              <% end %>
            </div>

            <!-- Register -->
            <div class="tab-content" id="tab2" style="display: none;">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'register'}) do |f| %>
                  <%= devise_error_messages! %>

                  <p class="form-row form-row-wide">
                    <label for="email">Email Address:
                      <i class="ln ln-icon-Mail"></i>
                      <%= f.email_field :email, autofocus: true, class: 'input-text' %>
                    </label>
                  </p>

                  <p class="form-row form-row-wide">
                    <label for="password">Password:
                      <i class="ln ln-icon-Lock-2"></i>
                      <%= f.password_field :password, autocomplete: 'off', class: 'input-text' %>
                    </label>
                  </p>

                  <p class="form-row form-row-wide">
                    <label for="password_confirmation">Repeat Password:
                      <i class="ln ln-icon-Lock-2"></i>
                      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'input-text' %>
                    </label>
                  </p>

                  <p class="form-row">
                    <%= f.submit 'Sign up', class: 'button border fw margin-top-10' %>
                  </p>
              <% end %>
            </div>

          </div>
        </div>



      </div>
    </div>

  </div>
  <!-- Container / End -->

</div>
<div class="clearfix"></div>